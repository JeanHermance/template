{
  "compilerOptions": {
    "target": "esnext", 
    "module": "commonjs", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "outDir": "dist",
    "strict": true, 
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true 
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts" 
  ]
}
